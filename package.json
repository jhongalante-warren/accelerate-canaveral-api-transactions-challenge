{
  "name": "api-ts-template",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc && tscpaths -p tsconfig.json -s ./src -o ./dist",
    "format:check": "prettier --check src",
    "format:write": "prettier --write src",
    "lint:check": "eslint -c .eslintrc --ext .ts src",
    "start": "DEBUG=api-ts-template* node dist/index.js",
    "dev": "set DEBUG=api-ts-template* && nodemon src/index.ts",
    "test": "NODE_ENV=test jest \"^.+test\\.ts$\" --runInBand --detectOpenHandles",
    "test:watch": "jest --watch \"^.+test\\.ts$\"",
    "load:test": "cd load-test && ./run.sh",
    "pact:publish": "npm run build && node dist/infrastructure/pact/publisher/Publisher.js",
    "pact:verify": "jest \"^.+pactverify\\.ts$\"",
    "pact:test": "jest \"^.+pacttest\\.ts$\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/warrenbrasil/api-ts-template.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/warrenbrasil/api-ts-template/issues"
  },
  "homepage": "https://github.com/warrenbrasil/api-ts-template#readme",
  "devDependencies": {
    "@pact-foundation/pact": "^9.16.0",
    "@pact-foundation/pact-node": "^10.13.3",
    "@shelf/jest-mongodb": "^2.2.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/mongodb": "^3.6.3",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/yamljs": "^0.2.31",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "26.1.0",
    "jest-pact": "^0.9.1",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.0",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "tscpaths": "0.0.9",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@warrenbrasil/api-node-toolkit": "^3.7.0",
    "@warrenbrasil/ts-express-validation-middleware": "^2.0.5",
    "@warrenbrasil/ts-logger-provider": "^1.2.0",
    "@warrenbrasil/ts-mongodb-client": "0.0.4",
    "aws-sdk": "^2.833.0",
    "dotenv": "^8.2.0",
    "joi": "^17.6.0",
    "mongodb": "^3.6.3",
    "reflect-metadata": "^0.1.13",
    "supertest": "^6.2.2",
    "swagger-ui-express": "^4.1.6",
    "tsyringe": "^4.4.0",
    "yamljs": "^0.3.0"
  }
